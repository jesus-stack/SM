@model IEnumerable<Infraestructure.Models.Producto>


<div class="row container table-responsive col-12">
    <table class="table  table-striped table-bordered text-center">
        <thead class="bg-sprimary">
            <tr>
          
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.cantidad_minima)</th>
                <th>@Html.DisplayNameFor(model => model.cantidad_maxima)</th>
                <th>@Html.DisplayNameFor(model => model.Total) Despachadas</th>
               

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Take(5))
            {
                <tr>

                  
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.cantidad_minima)</td>
                    <td>@Html.DisplayFor(modelItem => item.cantidad_maxima)</td>
                    <td>@Html.DisplayFor(modelItem => item.Total)</td>
                   </tr>

            }
        </tbody>
    </table>



</div>
<div class="card card-danger">
    <div class="card-header">
        <h3 class="card-title">Donut Chart</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
        <canvas id="donutChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%; display: block; width: 419px;" width="838" height="500" class="chartjs-render-monitor"></canvas>
    </div>
    <!-- /.card-body -->
</div>