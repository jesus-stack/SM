<br />
@model IEnumerable<Infraestructure.Models.ProductoSeccion>


<div class="row container table-responsive col-12">
    <table class="table  table-striped table-bordered text-center">
        <thead class="bg-sprimary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Lote)</th>
                <th>@Html.DisplayNameFor(model => model.Seccion)</th>
                <th>@Html.DisplayNameFor(model => model.Producto)</th>
                <th>@Html.DisplayNameFor(model => model.Cantidad)</th>              
                <th class="">Editar</th>
                <th class="">Eliminar</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                   
                    <td>@Html.DisplayFor(modelItem => item.Lote)</td>
                    <td>@Html.DisplayFor(modelItem => item.Seccion.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Producto.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                    <td>@Html.ActionLink(" ", "Create","ProductoSeccion", new {idproducto=item.IdProducto , lote = item.Lote }, new { @class = "action_right bx bx-edit" })</td>

                    <td><i class='action_left bx bxs-trash' data-toggle="modal" data-target="#c-@item.Lote"></i></td>
                    <div class="modal fade" id="c-@item.Lote" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel">Seccion Producto</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Esta seguro que desea eliminar el registro de
                                    <br />
                                    "@item.Seccion.Descripcion  Lote @item.Lote "?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                    @Html.ActionLink("Confirmar", "eliminar","ProductoSeccion", new { idproducto=item.IdProducto  ,lote = item.Lote }, new { @class = "btn btn-primary" })

                                </div>
                            </div>
                        </div>
                    </div>
                </tr>

            }
        </tbody>
    </table>
   


</div>

