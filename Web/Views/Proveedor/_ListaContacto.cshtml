@{List<Infraestructure.Models.Contacto> contactos = (List<Infraestructure.Models.Contacto>)TempData["contac"];TempData.Keep("contac");}




<div class="row container table-responsive col-12" id="tablaContacto">
    <table class="table  table-striped table-bordered text-center">
        <thead class="bg-sprimary">
            <tr>

                <th> Nombre </th>
                <th>Contacto</th>


                <th class="">Eliminar</th>

            </tr>
        </thead>
        <tbody>

            <h1> Contactos</h1>
            @foreach (var item in contactos)
            {
                <tr>

                    <div id="cont">
                        <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefono)</td>

                        @*<td>@Html.ActionLink(" ", "Create", "ProductoSeccion", new { idproducto = item.IdProducto, lote = item.Lote }, new { @class = "action_right bx bx-edit" })</td>*@


                        <td><i class='action_left bx bxs-trash' data-toggle="modal" data-target="#c-@item.Id"></i></td>
                    </div>

                </tr>








                <div class="modal fade" id="c-@item.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLabel">Seccion Producto</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                Esta seguro que desea eliminar el registro de
                                <br />
                                "@item.Nombre  Tel: @item.Telefono "?
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                                @*@Html.ActionLink("Confirmar", "EliminarContact", "Proveedor", new { idContacto = item.Id, idProveedor = item.IdProveedor }, new { @class = "btn btn-primary" })*@ 
                                @Ajax.ActionLink("Confirmar", "EliminarContact", "Proveedor", new { idContacto = item.Id }, new AjaxOptions
                           {
                               UpdateTargetId = "tablaContacto",
                               InsertionMode = InsertionMode.Replace,
                               HttpMethod = "POST",
                               OnBegin = "hidemodal('#c-" + @item.Id + "')"
                           }, new { @class = "btn btn-primary" })

                            </div>
                        </div>
                    </div>
                </div>











            }
        </tbody>
    </table>

    

</div>


